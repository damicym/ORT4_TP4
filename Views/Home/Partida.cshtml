@{
    int imagenIndex = ViewBag.errores != null ? Math.Min(ViewBag.errores.Count, 5) : 0;
    string rutaImagen = $"/images/{imagenIndex}.png";
}
<img src="@rutaImagen" alt="foto chaboncito">
<h1>
    @foreach (char letra in ViewBag.render)
    {
        @($"{letra} ")
    }
</h1>

<h3>Intentos: @ViewBag.intentos</h3>

<div class="divLetrasFallidas">
<h3>Letras fallidas</h3>
<h4>
@foreach (char letra in ViewBag.errores)
    {
        @($"{letra} ")
    }
<br>
</h4>
</div>
<form action='@Url.Action("GuessLetra", "Home")' method="POST">
    Arriesgá una letra 
    <input autocomplete="off" type="text" maxlength="1" name="guess" required autofocus>
    <input class="boton" type="submit" value="Arriesgar Letra">
    @if(ViewBag.mensaje != null) {<h3 class="error">@ViewBag.mensaje</h3>}
</form> 

<form action='@Url.Action("GuessPalabra", "Home")' method="POST">
    Arriesgá una palabra
    <input autocomplete="off" type="text" maxlength="@ViewBag.render.Count" name="guessPalabra" required>
    <input class="boton" type="submit" value="Arriesgar Palabra">
</form>
